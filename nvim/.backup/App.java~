package usecases.NomNomCo;
import java.util.Random;

import usecases.NomNomCo.Menu.Menu;

public class App {

    public App () {

        StringBuilder sb = new StringBuilder(10);
        Random random = new Random();

        for (int i = 0; i < 12; i++) {
            int randomDigit = random.nextInt(10);
            sb.append(randomDigit);
        }

        System.out.println( sb.toString());

        StringBuilder sb2 = new StringBuilder("0x");

        String HEX_CHARS = "0123456789abcdefhijklmnopqrstuvwxyz";


        for (int i = 0; i < 12; i++) {
            int randomIndex = random.nextInt(HEX_CHARS.length());
            char randomChar = HEX_CHARS.charAt(randomIndex);
            sb2.append(randomChar);
        }

        System.out.println(sb2.toString());

        Menu menu = Menu.getInstance();
        menu.run();
    }

    public static void main(String[] args) throws Exception {
       new App();
    }
}
