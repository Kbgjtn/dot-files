package garden;
import garden.plants.*;


public class Garden {
    public GardenTheme theme = null;
    public Plant plant = null;

    public Garden(GardenTheme theme, Plant plant) {
        this.theme = theme;
        this.plant = plant;
    }

    protected void build() {
        System.out.println("Building a garden...");
    };

    public GardenTheme getTheme() {
        return theme;
    }

    public void setTheme(GardenTheme theme) {
        this.theme = theme;
    }

    public PlantLocation getLocation() {
        return plant.getLocation();
    }

    public void desc() {
        System.out.println( "Garden theme is " + this.theme.toString().toLowerCase() + ", located in "+ this.plant.getLocation().toString().toLowerCase() + ", The Plant Name is " + this.plant.getName());
    }

    @Override
    public String toString() {
        return "Garden theme: " + this.theme + ", located in "+ this.plant.getLocation() + ", The Plant Name is " + this.plant.getName();
    }
}
